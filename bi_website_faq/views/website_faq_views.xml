<?xml version="1.0"?>
<odoo>
    <record id="website_faq_view_form" model="ir.ui.view">
        <field name="name">website.faq.form</field>
        <field name="model">website.faq</field>
        <field name="arch" type="xml">
            <form string="Website FAQ">
                <sheet>
                    <group>
                        <field name="is_published"/>
                        <field name="name"/>
                        <field name="answer"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="website_faq_view_list" model="ir.ui.view">
        <field name="name">website.faq.list</field>
        <field name="model">website.faq</field>
        <field name="arch" type="xml">
            <list string="Website FAQ">
                <field name="name"/>
                <field name="answer"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>


    <record id="website_faq_action" model="ir.actions.act_window">
        <field name="name">Frequently Asked Questions</field>
        <field name="res_model">website.faq</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="website_faq_menu"
              sequence="10"
              name="FAQ"
              action="website_faq_action"/>
</odoo>